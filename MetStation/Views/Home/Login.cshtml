@model MetStation.Models.Uzytkownicy

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    //this  is for create form tag
    @Html.AntiForgeryToken()          
    // this is for prevent CSRF attack
    @Html.ValidationSummary(true, "Logowanie nie powiodło się")
    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.Uzytkownik)</td>
            <td>@Html.TextBoxFor(a => a.Uzytkownik)</td>
            <td>@Html.ValidationMessageFor(a => a.Uzytkownik)</td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(a => a.Haslo)
            </td>
            <td>
                @Html.PasswordFor(a => a.Haslo)
            </td>
            <td>
                @Html.ValidationMessageFor(a => a.Haslo)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login" />
            </td>
            <td></td>
        </tr>
    </table>
}

@* This below line is for create javascript section *@

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}