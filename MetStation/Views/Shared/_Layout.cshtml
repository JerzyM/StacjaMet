<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Jerzy Mieszczanski</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Stacja Metorologiczna", "Index", "Home")</p>

                </div>
                <div class="float-right">
                    <section id="login">
                        @if (Request.IsAuthenticated)
                        {
                            <strong>@Html.Encode(User.Identity.Name)</strong>
                            @Html.ActionLink("Wyloguj", "LogOut", "Home")
                        }
                        else
                        {
                            @Html.ActionLink("Rejestracja", "Register", "Home")
                            <span> | </span>
                            @Html.ActionLink("Logowanie", "Login", "Home")
                        }
                         @*@Html.ActionLink("Rejestracja", "Register", "Home")
                        @Html.ActionLink("Login", "Login", "Home")*@
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                            @*<li>@Html.ActionLink("Wyniki Pomiarów", "WeatherResult", "Home")</li>*@
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Hour : @DateTime.Now.Minute , @DateTime.Now.Year - by Jerzy Mieszczański</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
